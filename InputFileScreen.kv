<InputFileScreen@Screen>:
    name: "input_files"
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            text: "MOOSE Tutorial"
            font_size: 75
            height: 100
            width: root.width
            size_hint: None, None
            valign: 'center'
            halign:'center'
        BoxLayout:
            StackLayout:
                orientation: 'tb-lr'
                size_hint_x: None
                width: 150
                Button:
                    background_color: 1,1,1,0
                    height: 30
                    size_hint_y: None
                    text: "Main"
                    on_release: app.root.current = 'main_screen'
                Button:
                    background_color: 0,0,0,1
                    height: 30
                    size_hint_y: None
                    text: "Installation"
                    on_release: app.root.current = 'installation_screen'
                Button:
                    background_color: 0,0,0,1
                    height: 30
                    size_hint_y: None
                    text: "Math"
                    on_release: app.root.current = 'math_tutorial'
                Button:
                    background_color: 0,0,0,1
                    height: 30
                    size_hint_y: None
                    text: "MOOSE Coding"
                    on_release: app.root.current = 'moose_coding'
