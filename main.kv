#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include InstallationScreen.kv
#:include MathTutorialScreen.kv
#:include InputFileScreen.kv
#:include MooseCodingScreen.kv
ScreenManager:
    transition: NoTransition()
    MainScreen:
        name: "main_screen"
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                text: "MOOSE Tutorial"
                font_size: 75
                height: 100
                width: root.width
                size_hint: None, None
                valign: 'center'
                halign:'center'
            BoxLayout:
                StackLayout:
                    orientation: 'tb-lr'
                    size_hint_x: None
                    width: 150
                    Button:
                        background_color: 1,1,1,0
                        height: 30
                        size_hint_y: None
                        text: "Installation"
                        on_release: app.root.current = 'installation_screen'
                    Button:
                        background_color: 0,0,0,1
                        height: 30
                        size_hint_y: None
                        text: "Math"
                        on_release: app.root.current = 'math_tutorial'
                    Button:
                        background_color: 0,0,0,1
                        height: 30
                        size_hint_y: None
                        text: "Input Files"
                        on_release: app.root.current = 'input_files'
                    Button:
                        background_color: 0,0,0,1
                        height: 30
                        size_hint_y: None
                        text: "MOOSE Coding"
                        on_release: app.root.current = 'moose_coding'
    InstallationScreen:
    MathTutorialScreen:
    InputFileScreen:
    MooseCodingScreen:
